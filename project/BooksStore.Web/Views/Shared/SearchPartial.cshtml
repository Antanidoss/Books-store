@model BooksStore.Service.Models.FilterModel

<div class="search col-md-2">
    <div class="serchByName">
        <form asp-action="IndexBooks" asp-controller="Book" method="get">
            <div class="col-md-12 row btn-group">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Название" asp-for="BookName" />
                    <div class="input-group-btn">
                        <input type="submit" value="Поиск" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="serchByCategory">
        <div>
            @Html.ActionLink("Поиск по категориям", "IndexCategories", "Category")
        </div>
    </div>
</div>

@model RegistrationModel

<link rel="stylesheet" href="~/css/accountStyle.css" />

<div class="regLog-div">
    <form method="POST" asp-action="Registration" asp-controller="Account" class="regLog-form">

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <input asp-for="Name" class="regLog-input" />
            <label asp-for="Name" class="regLog-label">Имя:</label>
        </div>

        <div class="form-group">
            <input asp-for="Email" class="regLog-input" type="email" placeholder=" " />
            <label asp-for="Email" class="regLog-label">Эл.Почта:</label>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="regLog-input" type="password" placeholder=" " />
            <label asp-for="Password" class="regLog-label">Пароль:</label>
        </div>

        <div class="form-group">
            <input asp-for="ConfirmPassword" class="regLog-input" type="password" placeholder=" " />
            <label asp-for="ConfirmPassword" class="regLog-label">Подтверждение пароля:</label>
        </div>

        <div class="form_group">
            <label asp-for="IsParsistent" class="logReg-label">Запомнить:</label>
            <input asp-for="IsParsistent" class="regLog-input" style="width: 20px" type="checkbox" />
        </div>

        <div class="col-auto row">
            <div class="col-md-9">
                <input class="regLog-submit" value="Зарегестрироваться" type="submit" />
            </div>
            <a asp-action="Login" asp-controller="Account" style="line-height: 40px">Войти</a>
        </div>
    </form>
</div>